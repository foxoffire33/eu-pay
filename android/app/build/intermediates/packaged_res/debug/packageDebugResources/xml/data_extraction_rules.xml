<?xml version="1.0" encoding="utf-8"?>
<!--
    EU Pay — Data Extraction Rules (Android 12+)

    PRIVACY: No user data is backed up to Google cloud.
    All sensitive data (tokens, keys, credentials) stays on-device.
    Zero-knowledge architecture: private keys NEVER leave Android Keystore.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Block ALL cloud backup — payment app, zero data leaves device -->
        <exclude domain="root" />
        <exclude domain="file" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="external" />
    </cloud-backup>
    <device-transfer>
        <!-- Block device-to-device transfer of sensitive data -->
        <exclude domain="root" />
        <exclude domain="database" />
        <exclude domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>
